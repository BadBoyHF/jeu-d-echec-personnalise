void pTour()
{
	int nbr = 0;
	int nbr1= 0;
	int nbr2 = 0;


	int dd = 0;
	int dg = 0;
	int db = 0;
	int dh = 0;


	printf("voullez vous deplacer votre tour vers le haut ou le bas, haut = (0) et bas = (1) ? : ");
	scanf("%d", &nbr);

	if (nbr == 0)
	{
		printf("de combien de case voullez-vous deplacer votre tour vers le haut ?  :  ");
		scanf("%d", &dh);

		for (x = 0; x < dh; x++)
		{
			x++;
			printf("deplacement %d \n", x);
		}

	}

	if (nbr == 1)
	{

		printf("de combien de case voullez-vous deplacer votre tour vers le bas ? :  ");
		scanf("%d", &db);

		for (y = 0; y = db; y++)
		{
			nbr1 = nbr1 - 1;
		}

	}





	printf("voullez vous deplacer votre tour vers la droite ou la gauche, droite = (0) et gauche = (1) ? : ");
	scanf("%d", &nbr);

	if (nbr == 0)
	{

		printf("de combien de case voullez-vous deplacer votre tour vers la droite ?  :  ");
		scanf("%d", &dd);

		for (x = 0; x = dd; x++)
		{
			nbr2++;
		}

	}

	if (nbr == 1)
	{
		printf("de combien de case voullez-vous deplacer votre tour vers la gauche ? :  ");
		scanf("%d", &dg);


		for (y = 0; y = dg; y++)
		{
			nbr2 = nbr2 - 1;
			printf("votre tour est désormain en %i %i ", nbr1, nbr2);
		}
	}


}

void pPion()
{
	if (manche == 1)
	{

		int nombre1;
		printf("de combien voulez vous déplacer le pion (1) ou (2) : ");
		scanf("%d", &nombre1);

		for (y = 0; y <= nombre1; y++)
		{
			printf("déplacement vers le haut de  %d\n", y);
		}
	}
	else
	{

		for (y = 0; y = 1; y++)												//si le tour est plus que 1 
		{
			printf("déplacement vers la haut de 1 case %d \n", y);
		}

	}

	_getch();
	manche++;
	//fermeture du void ppion
}


void pCavalier()
{
	int move;
	int cav;
	printf("voulez vous deplacez le premier cavalier (1) ou le second (2)");
	scanf("%d", &cav);

if (cav == 1) 

{
	
	x = 1;
	y = 0;
	printf("\n \n position initiale du cavalier (x),(y) : %i , %i",x , y);
	printf(" \n voulez vous le déplacer vers la droite (1) ou vers le gauche (2) ?");
	scanf("%d", &move); 

}
 
if (move == 1) //deplacement à droite 

{
	
	int i; 
	for (i = 1 ; i < 3; i++)
	{
		x++;
		printf(" \n deplacement de 2 vers la droite %i %i", x, y);
		
	}

	for (i = 0 ; i < 2 ; i++) 
	{
		y++;
     printf("\n déplacement de 1 vers le haut %i %i: ", x, y);
	}
	

	if (move == 2) //déplacement à gauche

	{
		int i;
		for (i = 1; i < 3; i++)
		{

			x++;
			printf("déplacement de 2 vers le haut %i %i", x, y);
		}

		for (i = 1; i < 0; i--)
		{
			y--;
			printf("déplacement de 1 vers la gauche %i %i", x, y);
		}

}
	//fermeture de void cavalier
}

	

	_getch();
}
